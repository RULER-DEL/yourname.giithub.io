        // å¼€å§‹æµ‹è¯•
        function startTest() {
            document.getElementById('startContainer').style.display = 'none';
            document.getElementById('questionContainer').style.display = 'block';
            currentQuestionIndex = 1;
            scores = [];
            selectedOptions = [];
            updateProgress();
            
            // æ·»åŠ é€‰é¡¹ç‚¹å‡»äº‹ä»¶
            document.querySelectorAll('.option').forEach(option => {
                option.addEventListener('click', function() {
                    const container = this.closest('.question-container');
                    const questionIndex = parseInt(container.dataset.question);
                    
                    // ç§»é™¤åŒä¸€é—®é¢˜å…¶ä»–é€‰é¡¹çš„é€‰ä¸­çŠ¶æ€
                    container.querySelectorAll('.option').forEach(opt => opt.classList.remove('selected'));
                    
                    // æ ‡è®°é€‰ä¸­çŠ¶æ€
                    this.classList.add('selected');
                    
                    // è®°å½•ç­”æ¡ˆ
                    const score = parseInt(this.dataset.score);
                    scores[questionIndex] = score;
                    selectedOptions[questionIndex] = this.textContent;
                    
                    // å¯ç”¨ä¸‹ä¸€é¢˜æŒ‰é’®
                    document.getElementById('nextBtn').disabled = false;
                });
            });
        }

        // æ›´æ–°è¿›åº¦æ¡
        function updateProgress() {
            const progress = (currentQuestionIndex / totalQuestions) * 100;
            document.getElementById('progressBar').style.width = progress + '%';
            document.getElementById('currentQuestion').textContent = currentQuestionIndex;
            
            // æ›´æ–°æŒ‰é’®çŠ¶æ€
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            
            prevBtn.style.display = currentQuestionIndex > 1 ? 'block' : 'none';
            
            if (currentQuestionIndex === totalQuestions) {
                nextBtn.textContent = 'æŸ¥çœ‹ç»“æœ ğŸ‰';
            } else {
                nextBtn.textContent = 'ä¸‹ä¸€é¢˜';
            }
            
            // æ£€æŸ¥å½“å‰é—®é¢˜æ˜¯å¦å·²å›ç­”
            const currentContainer = document.querySelector(`[data-question="${currentQuestionIndex}"]`);
            const hasAnswer = currentContainer.querySelector('.option.selected');
            nextBtn.disabled = !hasAnswer;
        }

        // ä¸‹ä¸€é¢˜
        function nextQuestion() {
            if (currentQuestionIndex < totalQuestions) {
                // éšè—å½“å‰é—®é¢˜
                document.querySelector(`[data-question="${currentQuestionIndex}"]`).classList.remove('active');
                
                // æ˜¾ç¤ºä¸‹ä¸€é¢˜
                currentQuestionIndex++;
                const nextContainer = document.querySelector(`[data-question="${currentQuestionIndex}"]`);
                nextContainer.classList.add('active');
                
                // æ£€æŸ¥æ˜¯å¦å·²ç»å›ç­”è¿‡
                const hasAnswer = nextContainer.querySelector('.option.selected');
                document.getElementById('nextBtn').disabled = !hasAnswer;
                
                updateProgress();
            } else {
                // æ˜¾ç¤ºç»“æœ
                showResult();
            }
        }

        // ä¸Šä¸€é¢˜
        function previousQuestion() {
            if (currentQuestionIndex > 1) {
                // éšè—å½“å‰é—®é¢˜
                document.querySelector(`[data-question="${currentQuestionIndex}"]`).classList.remove('active');
                
                // æ˜¾ç¤ºä¸Šä¸€é¢˜
                currentQuestionIndex--;
                document.querySelector(`[data-question="${currentQuestionIndex}"]`).classList.add('active');
                
                // ç¡®ä¿ä¸Šä¸€é¢˜æœ‰ç­”æ¡ˆ
                const hasAnswer = document.querySelector(`[data-question="${currentQuestionIndex}"] .option.selected`);
                document.getElementById('nextBtn').disabled = !hasAnswer;
                
                updateProgress();
            }
        }

        // æ˜¾ç¤ºç»“æœ
        function showResult() {
            // è®¡ç®—æ€»åˆ†
            const totalScore = scores.reduce((sum, score) => sum + (score || 0), 0);
            
            // ç¡®å®šç»“æœç±»å‹
            let resultType = '';
            let resultConfig = null;
            
            for (const [type, config] of Object.entries(resultTypes)) {
                if (totalScore >= config.minScore && totalScore <= config.maxScore) {
                    resultType = type;
                    resultConfig = config;
                    break;
                }
            }
            
            // æ˜¾ç¤ºç»“æœé¡µé¢
            document.getElementById('questionContainer').style.display = 'none';
            document.getElementById('resultContainer').classList.add('show');
            
            // å¡«å……ç»“æœå†…å®¹
            document.getElementById('resultIcon').textContent = resultConfig.icon;
            document.getElementById('resultType').textContent = resultType;
            document.getElementById('resultDescription').textContent = resultConfig.description;
            
            // ç”Ÿæˆå‡è„‚æ–¹æ¡ˆ
            const fitnessPlan = document.getElementById('fitnessPlan');
            fitnessPlan.innerHTML = '';
            
            resultConfig.plan.forEach(item => {
                const div = document.createElement('div');
                div.className = 'recommendation';
                div.innerHTML = `<strong>${item.type}ï¼š</strong> ${item.content}`;
                fitnessPlan.appendChild(div);
            });
            
            // æ·»åŠ ä¸ªæ€§åŒ–å»ºè®®
            addPersonalizedAdvice(totalScore, fitnessPlan);
        }

        // æ·»åŠ ä¸ªæ€§åŒ–å»ºè®®
        function addPersonalizedAdvice(totalScore, container) {
            const adviceDiv = document.createElement('div');
            adviceDiv.className = 'recommendation';
            adviceDiv.style.marginTop = '15px';
            adviceDiv.style.background = 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)';
            
            let advice = '';
            if (totalScore <= 15) {
                advice = 'ğŸ’¡ ä½ çš„å‡è„‚é£æ ¼åå‘ä½›ç³»ï¼Œå»ºè®®ä»å°å¤„ç€æ‰‹ï¼Œé€æ­¥å»ºç«‹å¥åº·ä¹ æƒ¯ï¼Œä¸è¦æ€¥äºæ±‚æˆ';
            } else if (totalScore <= 23) {
                advice = 'ğŸ’¡ ä½ çš„å‡è„‚é£æ ¼ç†æ™ºç§‘å­¦ï¼Œå»ºè®®ç»§ç»­å­¦ä¹ ä¸“ä¸šçŸ¥è¯†ï¼Œæ‰¾åˆ°æœ€é€‚åˆè‡ªå·±çš„æ–¹æ³•';
            } else if (totalScore <= 31) {
                advice = 'ğŸ’¡ ä½ çš„å‡è„‚é£æ ¼è‡ªå¾‹ä¸¥è°¨ï¼Œå»ºè®®é€‚å½“æ”¾æ¾ï¼Œé¿å…è¿‡åº¦å‹åŠ›å½±å“æ•ˆæœ';
            } else {
                advice = 'ğŸ’¡ ä½ çš„å‡è„‚é£æ ¼å·ç‹çº§åˆ«ï¼Œå»ºè®®æ³¨æ„èº«ä½“ä¿¡å·ï¼Œé¿å…è¿‡åº¦è®­ç»ƒå¯¼è‡´å—ä¼¤';
            }
            
            adviceDiv.innerHTML = advice;
            container.appendChild(adviceDiv);
        }

        // åˆ†äº«åˆ°å°çº¢ä¹¦
        function shareToXiaohongshu() {
            const resultType = document.getElementById('resultType').textContent;
            const resultIcon = document.getElementById('resultIcon').textContent;
            const text = `ğŸ¯ æˆ‘åˆšåšäº†å‡è„‚æµ‹è¯•ï¼Œç»“æœæ˜¯ï¼š${resultIcon} ${resultType}\n\nå¿«æ¥æµ‹æµ‹ä½ çš„å‡è„‚ç±»å‹å§ï¼\n\nğŸ‘‰ ç‚¹å‡»é“¾æ¥è¿›è¡Œæµ‹è¯•ï¼š[æµ‹è¯•é“¾æ¥]\n\n#å‡è„‚æµ‹è¯• #å‡è‚¥æ–¹æ¡ˆ #å¥èº«è®¡åˆ’ #å‡è„‚è¾¾äºº`;
            
            alert('å°çº¢ä¹¦åˆ†äº«æ–‡æœ¬å·²å¤åˆ¶åˆ°å‰ªè´´æ¿ï¼\n\n' + text);
        }

        // å¤åˆ¶ç»“æœ
        function copyResult() {
            const resultType = document.getElementById('resultType').textContent;
            const resultIcon = document.getElementById('resultIcon').textContent;
            const description = document.getElementById('resultDescription').textContent;
            
            const text = `ğŸ¯ æˆ‘çš„å‡è„‚ç±»å‹ï¼š${resultIcon} ${resultType}\n\n${description}\n\nğŸ’ª å¿«æ¥æµ‹æµ‹ä½ çš„å‡è„‚ç±»å‹å§ï¼`;
            
            // åˆ›å»ºä¸´æ—¶æ–‡æœ¬åŒºåŸŸæ¥å¤åˆ¶æ–‡æœ¬
            const textarea = document.createElement('textarea');
            textarea.value = text;
            document.body.appendChild(textarea);
            textarea.select();
            document.execCommand('copy');
            document.body.removeChild(textarea);
            
            alert('æµ‹è¯•ç»“æœå·²å¤åˆ¶åˆ°å‰ªè´´æ¿ï¼');
        }

        // é‡æ–°æµ‹è¯•
        function restartTest() {
            // é‡ç½®æ‰€æœ‰çŠ¶æ€
            currentQuestionIndex = 1;
            scores = [];
            selectedOptions = [];
            
            // éšè—ç»“æœé¡µé¢
            document.getElementById('resultContainer').classList.remove('show');
            
            // é‡ç½®æ‰€æœ‰é€‰é¡¹
            document.querySelectorAll('.option').forEach(opt => opt.classList.remove('selected'));
            document.querySelectorAll('.question-container').forEach(container => {
                container.classList.remove('active');
            });
            document.querySelector('[data-question="1"]').classList.add('active');
            
            // æ˜¾ç¤ºå¼€å§‹é¡µé¢
            document.getElementById('startContainer').style.display = 'block';
            
            // æ›´æ–°è¿›åº¦æ¡
            updateProgress();
        }

        // é”®ç›˜å¯¼èˆª
        document.addEventListener('keydown', function(e) {
            if (document.getElementById('questionContainer').style.display === 'block') {
                if (e.key === 'ArrowLeft' && currentQuestionIndex > 1) {
                    previousQuestion();
                } else if (e.key === 'ArrowRight') {
                    const nextBtn = document.getElementById('nextBtn');
                    if (!nextBtn.disabled) {
                        nextQuestion();
                    }
                }
            }
        });
    </script>
